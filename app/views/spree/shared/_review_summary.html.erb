<div id="reviews">
  <%= render 'spree/shared/rating', locals: @product, review: 0 %>
  <% for review in (@review_setting&.track_locale ? @product.reviews.localized(I18n.locale) : @product.reviews).default_approval_filter(@review_setting).preview(@review_setting) %>
    <%= render 'spree/shared/review', review: review %>
  <% end %>
  <% if @review_setting&.feedback_rating && (!@review_setting&.require_login || spree_current_user) %>
    <%= link_to Spree.t(:write_your_own_review), new_product_review_path(@product), class: 'btn btn-primary' %>
  <% end %>
</div>
